<?xml version="1.0" encoding="UTF-8"?>
<functions>
  <function name="获取参与人对应的用户名称">
    <script><![CDATA[if(null == participant)
			return null;
		var cls = ""+participant.getClass();
		if ("class java.lang.String".equals(cls) || "class com.kingdee.bos.util.BOSUUid".equals(cls)) {
			participant = participant.toString();
			var adapter = new com.kingdee.eas.basedata.person.app.PersonToWFAdapter();
			var persons = adapter.getPersonByEmployeeId(__bosContext, participant);
			if (persons == null || persons.length == 0)
				return null;
			else
				return persons[0].getUserName(__bosContext.getLocale());
		} 
		
		else {
			return participant.getUserName(__bosContext.getLocale());
		}]]></script>
    <description><![CDATA[根据传入的参与人,获取此参与人对应的用户名称]]></description>
    <type>KSCRIPT</type>
    <editable>true</editable>
    <return>
      <type>STRING</type>
      <array>false</array>
      <description><![CDATA[返回参与人对应的第一个用户名称]]></description>
    </return>
    <parameter>
      <name>participant</name>
      <type>PERFORMER</type>
      <array>false</array>
      <description><![CDATA[职员Person对象,或者是职员的ID(字符串)]]></description>
    </parameter>
  </function>
</functions>

